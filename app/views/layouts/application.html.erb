<!DOCTYPE html>
<html>
<head>
  <title><%= @title || 'Blog' %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <link rel="stylesheet" type="text/css" href="/assets/jquery.cleditor.css">
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="top-header-background">
        <div class="header-content-area clear-float">
            <div class="site-title">
                <%= link_to 'ブログ課題', users_index_path %>
            </div>
            <div class="user-admin" data-login=<%= @id_login %>>
                <% unless @login %>
                    <a class="J_LogInBtn" href="javascript:void(0)">ログイン</a>
                    <a class="J_SignUpBtn" href="javascript:void(0)">登録</a>
                <% else %>
                    <span>ようこそ、<%= @username_login %>さん</span>
                    <%= link_to('新規ブログ', blogs_new_path) %>
                    <%= link_to('ブログ一覧', blogs_listbyuser_path(id: @id_login)) %>
                    <%= link_to '画像アプロード', photos_new_path %>
                    <%= link_to '画像アルバム', photos_list_path(id: @id_login) %>
                    <%= link_to('ログアウト', users_logout_path) %>
                    <!-- <a class="J_LogOutBtn" href="javascript:void(0)">ログアウト</a> -->
                <% end %>
            </div>
        </div>
    </div>

    <div class="wrapper">
        <%= yield %>
    </div>

    <div class="pop-up J_LoginPopup" style="display: none;">
        <div class="pop-up-title header-background">
            <span>ログイン</span>
            <a class="close-pop-up J_ClosePopup" href="javascript:void(0)">X</a>
        </div>
        <form class="J_LogInForm" action="" method="post">
            <div class="input-field">
                <label for="username">ブログID</label>
                <input type="text" id="username" name="username"/>
            </div>
            <div class="input-field">
                <label for="password">パスワード</label>
                <input type="password" id="password" name="password"/>
            </div>
            <div class="input-field">
                <button type="submit">ログイン</button>
                <!-- <input type="button" value="無料登録"/> -->
            </div>
        </form>
    </div>

    <div class="pop-up J_SignupPopup" style="display: none;">
        <div class="pop-up-title header-background">
            <span>登録</span>
            <a class="close-pop-up J_ClosePopup" href="javascript:void(0)">X</a>
        </div>
        <form class="J_SignUpForm" action="/users/new" method="post" enctype="multipart/form-data">
            <div class="input-field">
                <label for="su-username">ブログID</label>
                <input type="text" id="su-username" value="<%= @username %>" name="username"/>
            </div>
            <div class="input-field">
                <label for="su-password">パスワードを作成</label>
                <input type="password" id="su-password" name="password"/>
            </div>
            <div class="input-field">
                <label for="su-password-re">パスワードを再入力</label>
                <input type="password" id="su-password-re" name="password-re"/>
            </div>
            <div class="input-field">
                <label for="email">E-mail</label>
                <input type="text" id="email" name="email" value="<%=@email %>"/>
            </div>
            <div class="input-field">
                <label for="self-intro">自己紹介</label>
                <textarea id="self-intro" name="self_intro"><%= @self_intro %></textarea>
            </div>
            <div class="input-field">
                <label for="gender">性別</label>
                <select id="gender" name="gender">
                    <option value="none">選択してください</option>
                    <option value="female">女性</option>
                    <option value="male">男性</option>
                </select>
            </div>
            <div class="input-field">
                <label for="photo">写真アップロード</label>
                <input type="file" id="photo" name="upload_photo"/>
            </div>
            <div class="input-field">
                <button type="submit">無料登録</button>
            </div>
        </form>
    </div>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <script type="text/javascript" src="/assets/jquery.form.js"></script>
  <script type="text/javascript" src="/assets/jquery.cleditor.min.js"></script>

</body>
</html>