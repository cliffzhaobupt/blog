<div class="blog-list-page-wrapper">

  <%= render partial: 'blogs/pageheader', object: @user %>

  <div class="main-content-wrapper clear-float">
    <div class="left-part">

      <%= render partial: 'blogs/userinfo', object: @user %>

    </div>
    <div class="right-part">
      <h1>画像アルバム</h1>
      <div class="right-part-content">
        <div class="photo-list clear-float" data-user-id=<%= @user.id %> data-current-page=<%= @current_page %> data-page-count=<%= @page_count %>>
          <% if @could_edit %>
          <div class="edit-area">
            <span class="edit-intro">紹介編集数: <em>0</em></span>
            <span class="delete-photo">画像削除数: <em>0</em></span>
            <button class="save-edit">編集を保存する</button>
          </div>
          <% end %>
          <% (1..3).each do |column_index| %>
          <ul class="photo-column">
            <% @photo_columns["column_#{column_index}"].each do |photo| %>
              <li class="photo-wrapper">
                <% if @could_edit %>
                <img class="delete-radio" data-db-index=<%= photo.id %> title="削除する" src="/assets/delete.png"/>
                <% end %>
                <a href="javascript:void(0)" data-index=<%= photo.index_in_page %> data-origin-url=<%= photos_getoriginal_path(id: photo.id) %>>
                  <%= image_tag photos_getthumbnail_path(id: photo.id) %>
                  <% unless @could_edit %>
                  <p><%= photo.intro %></p>
                  <% else %>
                  <textarea data-db-index=<%= photo.id %>><%= photo.intro %></textarea>
                  <% end %>
                </a>
              </li>
            <% end %>
          </ul>
          <% end %>
        </ul>
        <% if @current_page < @page_count %>
        <button id="load-more-btn" class="load-more-btn">もっと見る</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="pop-up original-photo-popup popup-hide">
  <div class="pop-up-title header-background">
    <span>画像</span>
  </div>
  <div class="original-photo-wrapper">
    <img src="">
  </div>
  <a class="img-change-btn prev-img-btn" href="javascript:void(0)">&lt;</a>
  <a class="img-change-btn next-img-btn" href="javascript:void(0)">&gt;</a>
</div>