<div class="blog-wrapper">
    <div class="blog-title-wrapper">
        <h2><a href="javascript:void(0)"><%= article.title %></a></h2>
        <h3>発表時間：<%= article.created_at %></h3>
        <h3>タグ：<%= article.tag.name %></h3>
    </div>
    <div class="blog-content">
        <%= article.article %>
    </div>
    <div class="blog-bottom-wrapper">
        <ul>
            <li><a href="javascript:void(0)">閲覧数(<%= article.read_num %>)</a></li>
            <li><a href="javascript:void(0)">コメント数(<%= article.comment_num %>)</a></li>
        </ul>
    </div>
</div>